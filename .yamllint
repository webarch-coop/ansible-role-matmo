---
extends: default
yaml-files:
  - '*.yaml'
  - '*.yml'
rules:
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  line-length: disable
  comments-indentation: disable
  comments:
    min-spaces-from-content: 1
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true
# vim: syntax=yaml
...
